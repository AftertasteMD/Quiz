<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true"
        android:layout_above="@id/true_and_false"
        android:layout_margin="50dp"
        android:textSize="23sp"
        android:id="@+id/question"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/true_and_false">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/true_option"
            android:textSize="15sp"
            android:id="@+id/truebutton"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/false_option"
            android:textSize="15sp"
            android:id="@+id/falsebutton"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/true_and_false"
        android:id="@+id/back_and_forward">
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:src="@drawable/back"
            android:scaleType="centerCrop"
            android:id="@+id/previousbutton"/>
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:src="@drawable/next"
            android:scaleType="centerCrop"
            android:id="@+id/nextbutton"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cheat"
        android:id="@+id/cheatbutton"
        android:layout_below="@id/back_and_forward"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>